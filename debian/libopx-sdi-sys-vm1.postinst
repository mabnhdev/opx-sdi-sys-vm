#!/usr/bin/env bash

test -d /etc/udev/rules.d || mkdir -p /etc/udev/rules.d
if ls /sys/class/net/enp0* 1> /dev/null 2>&1 ; then
    cp /etc/opx/rules/80-dn-enp-virt-intf.rules /etc/udev/rules.d/80-dn-virt-intf.rules
elif ls /sys/class/net/eth* 1> /dev/null 2>&1 ; then
    cp /etc/opx/rules/80-dn-eth-virt-intf.rules /etc/udev/rules.d/80-dn-virt-intf.rules
fi
